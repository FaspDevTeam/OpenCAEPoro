{
    "version": 2,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default Config",
            "description": "Default build using Ninja generator",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_TEST": "ON",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "FASP_DIR": "/opt/faspsolver",
                "CMAKE_C_COMPILER": "icx",
                "CMAKE_CXX_COMPILER": "icx"
            },
            "vendor": {
                "example.com/ExampleIDE/1.0": {
                    "autoFormat": true
                }
            }
        },
        {
            "name": "windows-intel-Release",
            "inherits": "windows-intel-Debug",
            "displayName": "Windows x64 intel Release",
            "description": "Sets Ninja generator, compilers, x64 architecture, build and install directory, release build type",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "windows-intel-Debug",
            "inherits": "default",
            "displayName": "Windows x64 intel Debug",
            "description": "Sets Ninja generator, compilers, x64 architecture, build and install directory, debug build type",
            "cacheVariables": {
                "FASP_DIR": "C:/Program Files (x86)/faspsolver"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "hostOS": [
                        "Windows"
                    ]
                }
            }
        },
        {
            "name": "linux-intel-Debug",
            "inherits": "default",
            "displayName": "Linux x64 intel Debug",
            "description": "Sets Ninja generator, compilers, x64 architecture, build and install directory, debug build type"
        },
        {
            "name": "linux-intel-Release",
